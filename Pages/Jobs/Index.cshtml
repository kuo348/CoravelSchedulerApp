@page
@model CoravelSchedulerApp.Pages.Jobs.IndexModel
@{
    ViewData["Title"] = "排程任務列表";
}

<h2>📋 排程任務列表</h2>
<table>
    <thead>
        <tr>
            <th>名稱</th>
            <th>Cron</th>
            <th>狀態</th>
            <th>建立時間</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.JobName</td>
                <td>@job.CronExpression</td>
                <td>@(job.IsActive.Value ? "✅ 啟用" : "⛔ 停用")</td>
                <td>@job.CreatedAt.Value.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@job.Id">編輯</a> |
                    <a asp-page="./Toggle" asp-route-id="@job.Id">切換狀態</a> |
                    <a asp-page="./Delete" asp-route-id="@job.Id">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
