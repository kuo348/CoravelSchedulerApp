@page
@model IndexModel
@{
    ViewData["Title"] = "新增排程任務";
}

<div class="container mt-4">
    <h2>新增排程任務</h2>
    <form method="post" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">任務名稱</label>
            <input type="text" asp-for="JobName" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label class="form-label">Cron 表達式</label>
            <input type="text" asp-for="CronExpression" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label class="form-label">任務類型</label>
            <select asp-for="Type" class="form-select">
                <option value="Console">Console</option>
                <option value="Email">Email</option>
                <option value="ApiCall">API 呼叫</option>
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">任務內容 / URL</label>
            <input type="text" asp-for="Payload" class="form-control" />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-success">新增任務</button>
        </div>
    </form>
</div>
